{
    "name": "usetall/tallui-web-components",
    "description": "Renderless Web Components for the Tall-Stack.",
    "keywords": [
        "laravel",
        "tallui",
        "blade",
        "laravel-package",
        "tailwindcss",
        "alpinejs",
        "tall-stack"
    ],
    "homepage": "https://github.com/usetall/tallui-web-components",
    "license": "MIT",
    "authors": [
        {
            "name": "Alf Drollinger",
            "email": "alf@tallui.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "spatie/laravel-package-tools": "^1.4.3",
        "illuminate/contracts": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.13",
        "phpunit/phpunit": "^9.3",
        "spatie/laravel-ray": "^1.9",
        "vimeo/psalm": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "Tallui\\": "src",
            "Tallui\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tallui\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tallui\\TalluiWebComponentsServiceProvider"
            ],
            "aliases": {
                "TalluiWebComponents": "Tallui\\TalluiWebComponentsFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
